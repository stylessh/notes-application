<div class="col-md-5 mx-auto mt-3">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">

                <div class="row">
                    
                    <div class="form-group mic-recognition-box col-sm-11">
                    <input type="text" 
                    name="title"
                    placeholder="Title"
                    class="form-control input-title"
                    autofocus>

                </div>

                <i class="fas fa-microphone col-sm-1 mt-2" id="icon-title"></i>
                

                </div>

                <div class="row">

                <div class="form-group mic-recognition-box col-sm-11">
                    <textarea name="description" 
                    class="form-control input-description"
                    placeholder="Description"></textarea>
                </div>


                 <i class="fas fa-microphone col-sm-1 mt-3" id="icon-description"></i>


                </div>

                <div class="row">
                    <div class="form-group col-md-8">
                    <button type="submit"
                    class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>

                <div class="form-group col-md-4">
                    <a href="/notes" class="nav-link">View all notes</a>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="//cdnjs.cloudflare.com/ajax/libs/annyang/2.6.0/annyang.min.js"></script>
<script src="/js/voiceRecognition.js"></script>